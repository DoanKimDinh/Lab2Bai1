<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backgroundbackground"
    android:layout_height="match_parent"
    tools:context="com.example.student.myapplication.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="334dp"
        android:layout_height="419dp"

        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_inbackground_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="33dp"
            android:gravity="center"
            android:text="PASSWORD \n GERNERATOR"
            android:textColor="#f1f1f1"
            android:textSize="24sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtResult"
            android:layout_width="217dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="62dp"
            android:layout_marginTop="122dp"
            android:background="#4856ac"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintHorizontal_bias="0.829"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="178dp"
            android:text="Password length"
            android:textColor="#f1f1f1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="229dp"
            android:text="Include uppcase letter"
            android:textColor="#f1f1f1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="273dp"
            android:text="InClude lower case letter"
            android:textColor="#f1f1f1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="310dp"
            android:text="Include number"
            android:textColor="#f1f1f1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="62dp"

            android:layout_marginTop="8dp"
            android:background="#f1f1f1"
            android:checked="true"
            android:text=""
            app:layout_constraintBottom_toTopOf="@+id/checkBox3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.98"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:layout_marginTop="266dp"
            android:background="#f1f1f1"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox

            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dp"
            android:background="#f1f1f1"
            android:checked="true"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="310dp" />

        <EditText
            android:id="@+id/edtNumber"
            android:layout_width="70dp"
            android:layout_height="29dp"
            android:layout_marginRight="62dp"
            android:layout_marginTop="166dp"
            android:background="#f1f1f1"
            android:ems="10"

            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>

    <Button

        android:id="@+id/btncreate"
        android:layout_width="193dp"
        android:layout_height="49dp"
        android:layout_marginBottom="21dp"

        android:layout_marginRight="70dp"
        android:background="#102b66"
        android:text="GENERATE PASSWORD"
        android:textColor="#f1f1f1"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout" />


</android.support.constraint.ConstraintLayout>
